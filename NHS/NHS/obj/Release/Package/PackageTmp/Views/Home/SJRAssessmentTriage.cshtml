@model NHS.Common.clsSJRReview
@{
    ViewBag.Title = "SJR Assessment Triage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row form-group">
        <div class="col-xs-12 col-lg-12">
            <div class="row" align="right">
                <div class="col-md-12">
                    <input type="image" src="~/images/Delete.png" width="30" height="30" alt="Submit" id="btnClose4" title="Close" />
                </div>
                </div>
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="disabled">
                    <a href='@Url.Action("PatientDetails", "home", new { id=Model.Patient_ID })'>
                        <h4 class="list-group-item-heading">
                            Patient details
                        </h4>
                    </a>

                </li>
                <li class="disabled">
                    <a href='@Url.Action("MedicalExaminerReview", "home", new { id=Model.Patient_ID })'>
                        <h4 class="list-group-item-heading">
                            Medical Examiner Review
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("MedicalExaminerDecision", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            Medical Examiner Decision
                        </h4>
                    </a>
                </li>
                <li class="active">
                    <a href='@Url.Action("SJRAssessmentTriage", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            SJR Assessment Triage
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("OtherReferrals", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            Other Referrals
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("PositiveFeedback", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            Positive Feedback
                        </h4>
                    </a>
                </li>
            </ul>
            </div>
        </div>
    <div class="row setup-content" id="step-4">
        @using (Html.BeginForm("SJRAssessmentTriage", "Home", FormMethod.Post, new { @id = "my_form" }))
        {
            @*AntiForgeryConfig.SuppressXFrameOptionsHeader = true;
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            <div class="col-xs-12 col-lg-12">
                <form action="/Home/MedExamFormStep4" method="post" id="frmMedExamFormStep4">
                    <div class="col-md-12 well">
                        <div class="form-section">
                            <div class="lable_title">
                                <h2>SJR REVIEW TRIAGE</h2>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @if (Model.PaediatricPatient == true)
                                        {
                                            <input type="checkbox" id="PaediatricPatient" checked name="PaediatricPatient"><span> Paediatric Patient </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="PaediatricPatient" name="PaediatricPatient"><span> Paediatric Patient </span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @if (Model.LearningDisabilityPatient == true)
                                        {
                                            <input type="checkbox" id="LearningDisabilityPatient" checked name="LearningDisabilityPatient"><span> Learning disability patient </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="LearningDisabilityPatient" name="LearningDisabilityPatient"><span> Learning disability patient </span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @if (Model.MentalillnessPatient == true)
                                        {
                                            <input type="checkbox" id="MentalillnessPatient" checked name="MentalillnessPatient"><span> Severe mental health illness patient </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="MentalillnessPatient" name="MentalillnessPatient"><span> Severe mental health illness patient </span>
                                        }

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @if (Model.ElectiveAdmission == true)
                                        {
                                            <input type="checkbox" id="ElectiveAdmission" checked name="ElectiveAdmission"><span> Elective admission </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="ElectiveAdmission" name="ElectiveAdmission"><span> Elective admission </span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @if (Model.NoKConcernsDeath == true)
                                        {
                                            <input type="checkbox" id="NoKConcernsDeath" checked name="NoKConcernsDeath"><span> NoK concerns about death </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="NoKConcernsDeath" name="NoKConcernsDeath"><span> NoK concerns about death </span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @if (Model.OtherConcern == true)
                                        {
                                            <input type="checkbox" id="OtherConcern" checked name="OtherConcern"><span> Other concerns which warrant further review </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="OtherConcern" name="OtherConcern"><span> Other concerns which warrant further review </span>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar">
                                        Details:
                                        @Html.EditorFor(model => model.OtherConcernDetails, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <br />
                                <br />

                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        <span> Full SJR Required &nbsp;&nbsp;  </span>
                                        @if (Model.FullSJRRequired == true)
                                        {
                                            <input type="checkbox" id="FullSJRRequired" checked name="FullSJRRequired"><span> Yes </span>
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="FullSJRRequired" name="FullSJRRequired"><span> Yes </span>
                                        }

                                    </div>
                                </div>
                                <br />
                                <br />

                                <div class="col-md-6">
                                    <div class="row_bar">
                                        <span>Specialty to complete SJR Review </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar">
                                        <select class="form-control" id="ddlCoronerReferral" name="ddlCoronerReferral">
                                            <option value="">
                                                Select Speciality
                                            </option>
                                            @foreach (var item in ViewBag.Specialities)
                                            {
                                                <option value="@item.SpecialityID">@item.SpecialityName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <button id="activate-prev-1" name="BtnPrevious" class="btn btn-primary btn-lg">Previous</button>
                        <button id="activate-step-2" name="BtnNext" class="btn btn-primary btn-lg">Save & Next</button>

                    </div>
                </form>
            </div>
        }
    </div>
    <br />
    <br />
    @*<div class="pull-right">
        <button class="btn btn-primary btn-lg" id="btnClose4">Close</button>
    </div>*@
</div>
<div class="modal fade" id="modelClose4">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Messsage</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-section" style="text-align:left">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row_bar">
                                <div>Doy you want to Save Record ?</div>
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-block" id="btnClose4Yes">Yes</button>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-block" id="btnModelClose4" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnClose4").click(function () {
            $("#modelClose4").modal();
        });
    });
</script>
<script type="text/javascript">
$(function () {
     $("#btnModelClose4").click(function(){
window.location.href = "@Url.Action("MortalityReview", "Home")";
    });

});
</script>

